.collect_main {
  background-color: #f2f4f5;
}
.collect_main .collect_title {
  padding: 20rpx 0;
  display: flex;
}
.collect_main .collect_title text {
  padding: 10rpx;
  margin-left: 25rpx;
  background-color: #fff;
  border: 1px solid #ccc;
}
.collect_main .collect_title .active {
  color: var(--themeColor);
  border: 1px solid currentColor;
}
.collect_main .collect_content {
  background-color: #fff;
}
.collect_main .collect_content .content_group {
  display: flex;
  border-bottom: 3rpx solid #ccc;
}
.collect_main .collect_content .content_group .goods_image_left {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.collect_main .collect_content .content_group .goods_image_left image {
  width: 70%;
}
.collect_main .collect_content .content_group .goods_info_right {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collect_main .collect_content .content_group .goods_info_right .title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collect_main .collect_content .content_group .goods_info_right .price {
  color: var(--themeColor);
  font-size: 32rpx;
}
