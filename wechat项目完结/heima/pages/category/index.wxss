page {
  height: 100%;
}
.caregory {
  height: 100%;
}
.caregory .caregory_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.caregory .caregory_container .left_menu {
  flex: 2;
}
.caregory .caregory_container .left_menu view {
  font-size: 30rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.caregory .caregory_container .left_menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.caregory .caregory_container .right_content {
  height: calc(100vh - 90rpx);
  flex: 5;
}
.caregory .caregory_container .right_content .content_item .item_title {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
}
.caregory .caregory_container .right_content .content_item .item_title .separator {
  color: #ccc;
  padding: 0 10rpx;
}
.caregory .caregory_container .right_content .content_item .item_list {
  display: flex;
  flex-wrap: wrap;
}
.caregory .caregory_container .right_content .content_item .item_list navigator {
  width: 33.33%;
  text-align: center;
}
.caregory .caregory_container .right_content .content_item .item_list navigator image {
  width: 50%;
}
