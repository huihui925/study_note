<view class="pics"><scroll-view class="pics_left" scroll-y show-scrollbar><block wx:for="{{categoryList}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view data-event-opts="{{[['tap',[['handleItemChange',[index,'$0'],[[['categoryList','id',item.id,'id']]]]]]]}}" class="{{[activeNumber==index?'pics_left_item active':'pics_left_item']}}" bindtap="__e">{{item.title}}</view></block></scroll-view><scroll-view class="pics_right" scroll-y show-scrollbar><block wx:for="{{imgList}}" wx:for-item="item" wx:for-index="__i0__" wx:key="id"><view class="right_img_warp"><image src="{{item.img_url}}" mode="widthFix" data-event-opts="{{[['tap',[['handlePreviewImg',['$0'],[[['imgList','id',item.id,'img_url']]]]]]]}}" bindtap="__e"></image><view class="img_title">{{''+item.title+''}}</view></view></block><block wx:if="{{imgList.length==0}}"><text>暂无数据</text></block></scroll-view></view>