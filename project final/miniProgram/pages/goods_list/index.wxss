.goodsList .goods_tab1 .content_group {
  display: flex;
  border-bottom: 3rpx solid #ccc;
}
.goodsList .goods_tab1 .content_group .goods_image_left {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goodsList .goods_tab1 .content_group .goods_image_left image {
  width: 70%;
}
.goodsList .goods_tab1 .content_group .goods_info_right {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goodsList .goods_tab1 .content_group .goods_info_right .title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goodsList .goods_tab1 .content_group .goods_info_right .price {
  color: var(--themeColor);
  font-size: 32rpx;
}
